{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "echo \"Skipping lint\"",
    "format": "prettier -w .",
    "test": "jest --passWithNoTests",
    "test:unit": "jest -c jest.unit.config.js",
    "test:int": "firebase emulators:exec --only firestore,functions \"jest -c jest.int.config.js\"",
    "build:functions": "npm --prefix functions run build",
    "deploy:preview": "firebase hosting:channel:deploy pr-$GITHUB_RUN_NUMBER --json",
    "deploy:prod": "firebase deploy --only hosting,functions",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "index.js",
  "dependencies": {
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.3.2",
    "form-data": "^4.0.4",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.5"
  },
  "private": true
}
